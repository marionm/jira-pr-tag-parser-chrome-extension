{
  "manifest_version": 2,

  "name": "Jira PR tag parser",
  "description": "Turns Jira tags in PR titles into links",
  "version": "3.0",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "options_page": "options.html",

  "permissions": [
   "activeTab",
   "storage",
   "https://www.github.com/buildoutinc/*",
   "https://github.com/buildoutinc/*"
  ]
}
